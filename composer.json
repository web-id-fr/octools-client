{
    "name": "web-id/octools-client",
    "description": "Laravel Client to use Octools.io API",
    "keywords": [
        "web-id",
        "laravel",
        "octools-client"
    ],
    "homepage": "https://github.com/web-id/octools-client",
    "license": "MIT",
    "authors": [
        {
            "name": "CLEMREP",
            "email": "clement@web-id.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "illuminate/contracts": "^9.0",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "WebId\\OctoolsClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebId\\OctoolsClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "WebId\\OctoolsClient\\OctoolsClientServiceProvider"
            ],
            "aliases": {
                "OctoolsClient": "WebId\\OctoolsClient\\Facades\\OctoolsClient"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
